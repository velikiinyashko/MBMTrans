@using MBMTrans.ViewModels
@model RegistrationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://use.fontawesome.com/releases/v5.0.2/css/all.css" rel="stylesheet">
</head>
<body class="body-content">

    <div class="form-group">
        <form asp-action="Registration" asp-controller="Account" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div class="form-group">
                <label class="form-control-label" asp-for="Login"><i class="fa fa-user"></i> Имя пользователя</label>
                <input class="form-control" type="text" asp-for="Login" />
                <span class="was-validated" asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="Password"><i class="fa fa-key"></i> Пароль</label>
                <input class="form-control" type="password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="ConfirmPasswd"><i class="fa fa-key"></i> Повторите Пароль</label>
                <input class="form-control" type="password" asp-for="ConfirmPasswd" />
                <span asp-validation-for="ConfirmPasswd"></span>
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="Email"><i class="fa fa-envelope"></i> E-mail</label>
                <input class="form-control" type="email" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label class="form-control-label" asp-for="Phone"><i class="fa fa-mobile"></i> Телефон</label>
                <input class="form-control" type="tel" asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Регистрация" />
            </div>
        </form>
    </div>

    <script defer src="https://use.fontawesome.com/releases/v5.0.2/js/all.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
</body>
</html>
